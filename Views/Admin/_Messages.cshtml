@{
    var messages = System.JCA.Web.Behavior.JCABootstrapper.Instance.Messages;
    var count = messages.Count();
}
<a data-toggle="dropdown" class="dropdown-toggle" href="#"><i class="icon-envelope icon-animated-vertical">
</i><span class="badge badge-success">@count</span> </a>
<ul class="pull-right dropdown-navbar dropdown-menu dropdown-caret dropdown-closer">
    <li class="nav-header"><i class="icon-envelope-alt"></i>@(count == 0 ? "No hay mensajes" : string.Format("{0} mensajes", count))
    </li>
    @foreach (var msg in messages)
    {
        <li><a href="#">
            <img src="/Template/assets/avatars/avatar.png" class="msg-photo" alt="Alex's Avatar" />
            <span class="msg-body"><span class="msg-title"><span class="blue">Alex:</span> Ciao
                sociis natoque penatibus et auctor ... </span><span class="msg-time"><i class="icon-time">
                </i><span>a moment ago</span> </span></span></a></li>
    }
    @if (count > 0)
    {
        <li><a href="#">Ver todos los mensajes <i class="icon-arrow-right"></i></a></li>
    }
</ul>
